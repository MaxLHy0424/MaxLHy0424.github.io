					rel="icon"
					href={
						favicon.src.startsWith("/")
							? url(favicon.src)
							: favicon.src
					}
					sizes={favicon.sizes}
					media={
						favicon.theme &&
						`(prefers-color-scheme: ${favicon.theme})`
					}
